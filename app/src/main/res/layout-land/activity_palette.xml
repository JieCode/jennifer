<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.palette.PaletteActivity">

    <com.jennifer.jennifer.ui.palette.view.MyPalette
        android:id="@+id/my_palette"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/size_5"
            android:paddingLeft="@dimen/size_15"
            android:paddingRight="@dimen/size_15"
            android:paddingTop="@dimen/size_5">

            <ImageView
                android:id="@+id/iv_eraser"
                android:layout_width="@dimen/size_28"
                android:layout_height="@dimen/size_38"
                android:src="@mipmap/icon_eraser" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>