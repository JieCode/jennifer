<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jennifer.jennifer">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.JenniferApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.parallax.GuideActivity"
            android:label="@string/title_activity_guide"
            android:screenOrientation="portrait" />
        <activity
            android:name=".base.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity
            android:name=".ui.web.WebViewActivity"
            android:label="@string/title_activity_guide"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.palette.PaletteActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".ui.environment.EnvironmentTestActivity"></activity>
    </application>

</manifest>